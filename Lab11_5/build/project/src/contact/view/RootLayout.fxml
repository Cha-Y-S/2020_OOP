<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="contact.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="파일">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNew" text="생성" />
              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="열기" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="저장" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="다른 이름으로 저장" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="종료" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="통계">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleShowBirthdayStatistics" text="생일 통계" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="도움말">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="프로그램 소개" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
